{
  // https://github.com/vitejs/vite/blob/main/packages/create-vite/template-svelte-ts/tsconfig.app.json
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "moduleDetection": "force",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte.ts",
    "src/**/*.svelte"
  ]
}
